        <name>AddEventQueueToCollection</name>
        <label>Adicionar EventQueue à coleção</label>
        <locationX>440</locationX>
        <locationY>1190</locationY>
        <assignmentItems>
            <assignToReference>eventQueuesToCreate</assignToReference>
