        <connector>
            <targetReference>RecordId</targetReference>
        </connector>
    </assignments>
    <assignments>
        <description>Instanciar EventQueue a ser criada</description>
        <name>EventQueueInstace</name>
        <label>Instância da EventQueue</label>
        <locationX>440</locationX>
        <locationY>1070</locationY>
        <assignmentItems>
            <assignToReference>eventQueueToCreate.RecordId__c</assignToReference>
            <operator>Assign</operator>
